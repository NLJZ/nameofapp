<div class="new_comment">
  <% if signed_in? %>
    <h4>Add a review:</h4>
    <%= form_for([@product, @product.comments.build]) do |f| %>
    <div class="field from-group">
      <%= f.label :body, "Comments" %>
    
      <%= f.text_area :body, class: "form-control review_box", rows: "9" %>
    </div>
      <div class="rating"></div>
      <%= f.submit "Submit", class: "btn btn-default review_button" %>
    <% end %>
  <% end %>
</div>
