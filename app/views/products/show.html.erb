<h1>Bikes! Bikes! Bikes!</h1>
<h2>Product:</h2>
<p>
  <h1><%= @product.name %></h1>
</p>

<div class="container">
  
    <p>
    <% if @product.image_url.present? %>
      <%= image_tag(@product.image_url, class:"img-fluid mx-auto d-block", id: "img_zoom", data_zoom_image: "@product.image_url") rescue nil %>
    <% end %>
    </p>
  
  <div class="row reviews">
    <div class="col-md-6">
      <p>
        <strong>Description:</strong>
        <%= @product.description %>
      </p>

      <p>
        <strong>Color:</strong>
        <%= @product.colour %>
      </p>

      <p>
        <strong>Price:</strong>
        <%= number_to_currency(@product.price) %>
      </p>
      <div class="flex-container">
        <p><strong>Average Rating:</strong></p>
        <div class="rated" data-score="<%= @product.average_rating %>"></div>
      </div>
      <p><%= form_with(url: '/payments/create') do |form| %>
          <%= render partial: "shared/stripe_checkout_button" %>
          <%= hidden_field_tag(:product_id, @product.id) %>
        <% end %>
        </p>
      <%= render 'new_comment' %>
    </div>
      
    <div class="col-md-6">
      <strong>Recent Reviews:</strong>
      <%= render 'comments' %>
    </div>
  </div>
  <% if signed_in? && current_user.admin? %>
    <%= link_to 'Edit', edit_product_path(@product) %> |
    <%= link_to 'Back', products_path %>
  <% end %>
  </div>


  

</div>